<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="address"
            type="com.lqy.newaddressdemo.model.AddressBean"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <EditText
            android:id="@+id/province_edit"
            style="@style/style_14_000000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableRight="@mipmap/downgo"
            android:editable="false"
            android:focusable="false"
            android:gravity="center_vertical|center_horizontal"
            android:hint="请选择"
            android:text="@={address.province}"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="省"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/city_edit"
            style="@style/style_14_000000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableRight="@mipmap/downgo"
            android:editable="false"
            android:focusable="false"
            android:gravity="center_vertical|center_horizontal"
            android:hint="请选择"
            android:text="@={address.city}"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="市"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/area_edit"
            style="@style/style_14_000000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableRight="@mipmap/downgo"
            android:editable="false"
            android:focusable="false"
            android:gravity="center_vertical|center_horizontal"
            android:hint="请选择"
            android:text="@={address.area}"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="区/县"
            android:textColor="@android:color/black"/>

    </LinearLayout>
</layout>

